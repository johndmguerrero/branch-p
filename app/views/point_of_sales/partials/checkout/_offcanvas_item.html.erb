
  <div class="flex-fill">
      <!-- Title -->
    <span class="d-block h6 text-sm font-bold mb-1"><%= item.product.name&.capitalize %></span>
    <span class="<%= item.discount.present? ? "text-success" : "" %>">&#8369; <%= item.total %></span>
    <% if item.package? %>
      <span class="d-block text-sm mb-1 ms-4"><%= item.description %></span>
    <% end %>
    <!-- Subtitle -->
  </div>
  <div class="ms-auto">
    <span class="d-block text-xs "><%= item.quantity %> <i class="bi bi-x-lg"></i></span>
  </div>