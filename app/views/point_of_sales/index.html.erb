<main class="bg-dark">
  <div class="container-md">
    <div class="row">
      <div class="col-lg-12">
        <!-- Salute + Small stats -->
        <div class="row align-items-center mb-4">
          <div class="col-md-5 mb-4 mb-md-0">
            <h1 class="mb-1 text-white">Order, <%= current_user.user_name %></h1>
            <span class="text-white text-opacity-80">Start building something great</span>
          </div>
          <div class="col-auto flex-fill d-none">
            <ul class="list-inline d-flex justify-content-md-end mb-0">
              <li class="list-inline-item">
                <div class="bg-shade-primary px-4 py-2 rounded">
                  <span class="badge badge-dot text-white">
                    <i class="bg-success"></i>Sales
                  </span>
                  <span class="d-sm-block mt-1 h5 text-white font-bold">
                    20.5%
                    <small class="bi bi-arrow-up text-success me-n1"></small>
                  </span>
                </div>
              </li>
              <li class="list-inline-item">
                <div class="bg-shade-primary px-4 py-2 rounded">
                  <span class="badge badge-dot text-white">
                    <i class="bg-warning"></i>Tasks
                  </span>
                  <span class="d-sm-block mt-1 h5 text-white font-bold">
                    5.7%
                    <small class="bi bi-arrow-up text-warning me-n1"></small>
                  </span>
                </div>
              </li>
              <li class="list-inline-item">
                <div class="bg-shade-primary px-4 py-2 rounded">
                  <span class="badge badge-dot text-white">
                    <i class="bg-danger"></i>Sales
                  </span>
                  <span class="d-sm-block mt-1 h5 text-white font-bold">
                    -3.24%
                    <small class="bi bi-arrow-down text-danger me-n1"></small>
                  </span>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <!-- Account navigation -->
        <div class="d-flex position-relative transform translate-y-1/2">
          <!-- Button Icon Text -->
          <a href="#" class="btn btn-icon btn-sm btn-neutral border-0 shadow">
            <i class="bi bi-people"></i>
            <span class="d-none d-sm-inline-block">Profile</span>
          </a>
          <div class="btn-group ms-auto" role="group" aria-label="Basic example">
            <a href="#" class="btn btn-icon btn-sm btn-neutral shadow border-0">
              <i class="bi bi-gear me-2"></i>
              <span class="d-none d-sm-inline-block">Settings</span>
            </a>
            <a href="#" class="btn btn-icon btn-sm btn-neutral shadow border-0">
              <i class="bi bi-bar-chart me-2"></i>
              <span class="d-none d-sm-inline-block">Analitycs</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>