<header class="pt-5">
  <div class="container-xl">
    <div>
      <div class="row align-items-center">
        <div class="col-md-6 col-12 mb-3 mb-md-0">
            <!-- Title -->
          <h1 class="h2 mb-0 ls-tight">Store Items</h1>
        </div>
        <!-- Actions -->
        <div class="col-md-6 col-12 text-md-end">
          <div class="mx-n1">
            <a href="#" class="btn d-inline-flex btn-sm btn-neutral shadow border-base mx-1" data-bs-toggle="offcanvas" data-bs-target="#category-create" aria-controls="offcanvasExample">
              <span class=" pe-2">
                  <i class="bi bi-boxes"></i>
              </span>
              <span>Categories</span>
            </a>
            <a href="#" class="btn d-inline-flex btn-sm btn-primary shadow mx-1" data-bs-toggle="offcanvas" data-bs-target="#item-create" aria-controls="offcanvasExample">
              <span class=" pe-2">
                  <i class="bi bi-plus-lg"></i>
              </span>
              <span>Add Items</span>
            </a>
          </div>
        </div>
      </div>
        <!-- Nav -->
      <ul class="nav nav-tabs overflow-x mt-2">
        <li class="nav-item">
          <%= link_to items_path, class: "nav-link font-regular #{active_page(items_path)}" do %>
            All Items
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>

<main class="py-10 bg-surface-secondary">
  <!-- Container -->
  <div class="container-xl">
    <div class="bg-card rounded shadow-sm">
      <div class="py-5">
        <%= items_index_view %>
      </div>
      <div class="card-footer">
        <%= will_paginate @items, page_links: false, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      </div>
    </div>
  </div>
</main>
<%= render partial: 'items/partials/new_offcanvas' %>
<%= render partial: 'items/partials/category_offcanvas' %>