<header class="pt-5">
  <div class="container-xl">
    <div>
      <div class="row align-items-center">
        <div class="col-md-6 col-12 mb-3 mb-md-0">
            <!-- Title -->
          <h1 class="h2 mb-0 ls-tight">Products</h1>
        </div>
        <!-- Actions -->
        <div class="col-md-6 col-12 text-md-end">
          <div class="mx-n1">

            <a href="#" class="btn d-inline-flex btn-sm btn-neutral border-base mx-1">
              <span class=" pe-2">
                  <i class="bi bi-eye"></i>
              </span>
              <span>View Categories</span>
            </a>
            <a href="#" class="btn d-inline-flex btn-sm btn-primary mx-1" data-bs-toggle="offcanvas" data-bs-target="#product-create" aria-controls="offcanvasExample">
              <span class=" pe-2">
                  <i class="bi bi-plus-lg"></i>
              </span>
              <span>Add Product</span>
            </a>
          </div>
        </div>
      </div>
        <!-- Nav -->
      <ul class="nav nav-tabs overflow-x mt-2">
        <li class="nav-item">
          <%= link_to products_path, class: "nav-link font-regular #{active_page(products_path)}" do %>
            All Products
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to products_path(type: 'archived'), class: "nav-link font-regular #{active_page(products_path(type: 'archived'))}" do %>
            Archived
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to products_path(type: 'deleted'), class: "nav-link font-regular #{active_page(products_path(type: 'deleted'))}" do %>
            Deleted
          <% end if current_user.owner? %>
        </li>
      </ul>
    </div>
  </div>
</header>
<!-- Main content -->
<main class="py-10 bg-surface-secondary">
  <!-- Container -->
  <div class="container-xl">
    <div class="bg-card rounded shadow-sm">
      <div class="py-5">
        <%= product_index_view %>
      </div>
    </div>
  </div>
</main>
<%= render partial: 'products/partials/new_offcanvas' %>