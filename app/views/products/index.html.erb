<header class="pt-5 bg-surface-secondary">
  <div class="container-xl">
    <div>
      <div class="row align-items-center">
        <div class="col-md-6 col-12 mb-3 mb-md-0">
            <!-- Title -->
          <h1 class="h2 mb-0 ls-tight">Products</h1>
        </div>
        <!-- Actions -->
        <div class="col-md-6 col-12 text-md-end">
          <div class="mx-n1">

            <a href="#" class="btn d-inline-flex btn-sm btn-neutral border-base mx-1">
              <span class=" pe-2">
                  <i class="bi bi-eye"></i>
              </span>
              <span>View Categories</span>
            </a>
            <a href="#" class="btn d-inline-flex btn-sm btn-primary mx-1" data-bs-toggle="offcanvas" data-bs-target="#product-create" aria-controls="offcanvasExample">
              <span class=" pe-2">
                  <i class="bi bi-plus-lg"></i>
              </span>
              <span>Add Product</span>
            </a>
          </div>
        </div>
      </div>
        <!-- Nav -->
      <ul class="nav nav-tabs overflow-x mt-2">
        <li class="nav-item">
          <a href="#" class="nav-link font-regular active">All Products</a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link font-regular">Archived</a>
        </li>
      </ul>
    </div>
  </div>
</header>
<!-- Main content -->
<main class="py-10 bg-surface-secondary">
  <!-- Container -->
  <div class="container-xl">
    <% if flash.present? %>
    <div class="alert alert-primary" role="alert">
      <strong>Holy guacamole!</strong> <%= flash[:notice] %>
    </div>
    <div class="alert alert-primary" role="alert">
      <strong>Holy guacamole!</strong> <%= flash[:alert] %>
    </div>
    <% end %>
    <div class="bg-card rounded shadow-sm">
      <div class="py-5">
        <%= product_index_view %>
      </div>
    </div>
  </div>
</main>
<%= render partial: 'products/partials/new_offcanvas' %>