<header class="pt-5">
  <div class="container-xl">
    <div>
      <div class="row align-items-center">
        <div class="col-sm-6 col-12 mb-4 mb-sm-0 d-flex">
          <%= product_go_back_index %>
          <h1 class="h2 ms-2 mb-0 ls-tight"><%= @product.name.capitalize %></h1>
        </div>
        <!-- Actions -->
        <div class="col-sm-6 col-12 text-sm-end">
          <div class="mx-n1">
            <%= product_set_status_btn %>
            <button type="button" class="btn shadow d-inline-flex btn-sm btn-outline-danger mx-1" data-bs-toggle="modal" data-bs-target="#confirm-delete">
              <span class=' pe-2'>
                <i class='bi bi-trash'></i>
              </span>
              <span>Delete</span>
            </button>
            <%# product_delete_btn %>
          </div>
        </div>
      </div>
      <!-- Nav -->
      <ul class="nav nav-tabs mt-4 overflow-x border-0">
        <li class="nav-item ">
          <a href="#" class="nav-link active">Information</a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link font-regular">History</a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link font-regular">File requests</a>
        </li>
      </ul>
    </div>
  </div>
</header>