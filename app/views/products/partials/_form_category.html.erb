<%= form_with model: model, scope: :category, url: url, method: method, html: { autocomplete: 'off' } do |t| %>
  <%= t.hidden_field :type, value: 'Categories::Product' %>
  <div class="row">
    <div class="col-md-12 mb-5">
      <%= t.label :name, "Name", class: 'form-label' %>
      <%= t.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-md-12 mb-5">
      <%= t.label :description, "Description", class: 'form-label' %>
      <%= t.text_area :description, class: 'form-control', rows: 4 %>
    </div>
  </div>
  <div class="text-end"> 
    <button type="button" class="btn btn-sm btn-neutral" data-bs-dismiss="offcanvas">Close</button>
    <% if action == 'create'  %>
      <%= t.button type: 'submit', class: 'btn btn-sm btn-primary' do %>
        Create
      <% end %>
    <% else %>
      <%= t.button type: 'submit', class: 'btn btn-sm btn-primary' do %>
        Update
      <% end %>
    <% end %>
  </div>
<% end %>