<div class="offcanvas offcanvas-end w-full w-sm-3/4 w-lg-1/3 show" data-bs-scroll="true" data-bs-backdrop="true" tabindex="-1" id="category-create" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="Label">Category</h5>
    <button type="button" class="btn-close text-reset text-xs" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body pt-0">
    <%  @categories.each do |category| %>
      <div class="form-item-checkable">
        <label class="item w-full" for="listGroupCheckableRadios116">
          <div class="form-item-click d-flex align-items-center border border-primary-hover text-heading px-4 py-3 rounded-2">
            <div class="action-table me-3">
              <div class="dropdown">
                  <a class="text-muted" href="#" role="button" data-bs-toggle="dropdown" id="dropdownMore1" aria-haspopup="true" aria-expanded="false">
                      <i class="bi bi-three-dots-vertical"></i>
                  </a>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a href="#!" class="dropdown-item">
                          Action
                      </a>
                      <a href="#!" class="dropdown-item">
                          Another action
                      </a>
                      <a href="#!" class="dropdown-item">
                          Something else here
                      </a>
                  </div>
              </div>
            </div>
            <div class="w-8">
              <i class="bi bi-tag text-lg"></i>
            </div>
            <span class="text-body text-sm"><%= category.name %></span>
            <span class="ms-auto text-sm text-muted"><%= category.products.size %></span>
          </div>
        </label>
      </div>
    <% end %>
  </div>
  <div class="modal-footer bg-surface-secondary">
    <%= turbo_frame_tag "form-category-product" do %>
      <%= render partial: 'products/partials/create_category' %>
    <% end %>
  </div>
</div>