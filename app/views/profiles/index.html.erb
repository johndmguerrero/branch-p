<header class="pt-6 pb-5 bg-dark shadow border-bottom">
  <div class="container-xl">
    <div>
      <div class="row align-items-center">
        <div class="col-md-6 col-12 mb-3 mb-md-0">
          <!-- Title -->
          <h1 class="h2 mb-0 ls-tight text-white">My Profile</h1>
        </div>
        <!-- Actions -->
        <div class="col-md-6 col-12 text-md-end">
          <%= turbo_frame_tag "stamp" do %>
            <%= render partial: 'profiles/partials/stamp_form', locals: { user: current_user } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>
<main class=" bg-surface-secondary">
  <!-- Container -->
  <div class="container-lg py-7">
    <div class="row">
      <div class="col col-12 mx-auto">
        <%= form_with model: current_user, url: profile_path(id: current_user.id), method: :patch do |f| %>
          <div class="mb-7">
            <h4 class="font-semibold mb-1">Profile</h4>
            <p class="text-sm text-muted">By filling your data you get a much better experience using our website.</p>
          </div>
          <div class="row g-5">
            <div class="col-md-6">
              <div class="">
                <%= f.label :first_name, "First name", class: 'form-label' %>
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="">
                <%= f.label :last_name, "Last name", class: 'form-label' %>
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <hr class="mt-10 mb-8">
          <div class="d-flex mb-8">
            <%= f.button type: 'submit', class: 'btn btn-primary ms-auto' do %>
              Save
            <% end %>
          </div>
        <% end %>
        <div class="mb-7">
          <h4 class="font-semibold mb-1">Attendance</h4>
        </div>
        <div class="card">
          <%= turbo_frame_tag "attendance_table" do %>
            <%= render partial: 'profiles/partials/attendances_tables', locals: { attendances: @attendances } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>