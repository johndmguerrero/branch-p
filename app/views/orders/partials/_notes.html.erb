<div class="card">
  <!-- Card Body -->
  <div class="card-body">
    <h5 class="card-title mb-1">Notes</h5>
    <div class="list-group-item px-0 border-0">
      <% notes.each do |note| %>
        <div class="hstack w-full align-items-start list-group-item border-0 px-0">
          <div class="flex-fill">
            <div class="d-flex align-items-center">
              <div class="">
                <strong class="text-heading text-sm"><%= note.user.email %></strong>
              </div>
              <div class="ms-auto">
                <span class="text-xs text-muted d-block"><%= note.created_at %></span>
              </div>
            </div>
            <div class="mt-2">
              <p class="text-sm text-muted">
                <%= note.message %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= form_with url: add_note_order_path(id: @order.id), class: 'mt-7 p-5', method: :post do |t| %>
    <div class="textarea-autosize">
      <%= t.text_area :message, class: 'form-control border-0 shadow-none p-0', resize: "none", rows: 4, placeholder: 'Add your additional notes' %>
    </div>
    <div class="d-flex mt-5">
      <%= t.button 'Add Note', type: 'submit', class: 'btn btn-sm btn-primary ms-auto'%>
    </div>
  <% end %>
</div>