<header class="pt-7 bg-primary shadow border-bottom">
  <div class="container">
    <div class="">
      <div class="row">
        <div class="col-lg-12">
          <!-- Salute + Small stats -->
          <div class="row align-items-center mb-4">
            <div class="col-md-5 mb-4 mb-md-0">
              <h1 class="mb-1 text-white">Store Inventory</h1>
              <span class="text-white">Manage your store Inventory here</span>
            </div>
            <div class="col-auto flex-fill d-none">
              <ul class="list-inline d-flex justify-content-md-end mb-0">
                <li class="list-inline-item">
                  <div class="bg-shade-primary px-4 py-2 rounded">
                    <span class="badge badge-dot text-white">
                      <i class="bg-success"></i>Sales
                    </span>
                    <span class="d-sm-block mt-1 h5 text-white font-bold">
                      20.5%
                      <small class="bi bi-arrow-up text-success me-n1"></small>
                    </span>
                  </div>
                </li>
                <li class="list-inline-item">
                  <div class="bg-shade-primary px-4 py-2 rounded">
                    <span class="badge badge-dot text-white">
                      <i class="bg-warning"></i>Tasks
                    </span>
                    <span class="d-sm-block mt-1 h5 text-white font-bold">
                      5.7%
                      <small class="bi bi-arrow-up text-warning me-n1"></small>
                    </span>
                  </div>
                </li>
                <li class="list-inline-item">
                  <div class="bg-shade-primary px-4 py-2 rounded">
                    <span class="badge badge-dot text-white">
                      <i class="bg-danger"></i>Sales
                    </span>
                    <span class="d-sm-block mt-1 h5 text-white font-bold">
                      -3.24%
                      <small class="bi bi-arrow-down text-danger me-n1"></small>
                    </span>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          <!-- Account navigation -->
          <div class="d-flex position-relative transform translate-y-1/2">
            <!-- Button Icon Text -->
            <a href="#create-inventory" data-bs-toggle="offcanvas" role="button" class="btn btn-icon btn-sm btn-neutral border-0 shadow">
              <span class="svg-icon svg-align-baseline pe-2">
                <i class="bi bi-plus-lg"></i>
              </span>
              <span class="d-none d-sm-inline-block">Create Inventory</span>
            </a>
            <div class="btn-group ms-auto d-none" role="group" aria-label="Basic example">
              <a href="#" class="btn btn-icon btn-sm btn-neutral shadow border-0">
                <i class="bi bi-gear me-2"></i>
                <span class="d-none d-sm-inline-block">Settings</span>
              </a>
              <a href="#" class="btn btn-icon btn-sm btn-neutral shadow border-0">
                <i class="bi bi-bar-chart me-2"></i>
                <span class="d-none d-sm-inline-block">Analitycs</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<main class="py-10 bg-surface-secondary">
  <!-- Container -->
  <div class="container">
    <div class="card bg-white p-3">    
      <%= render partial: 'inventories/partials/table' %>
    </div>
  </div>
</main>

<%= render partial: 'inventories/partials/offcanvas' %>